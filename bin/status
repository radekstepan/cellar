#!/usr/bin/env bash
# Check the status of the Docker container

# Go to the root of the project
cd "$(dirname "$0")/.."

if curl -s http://localhost:3001/api/schema >/dev/null; then
  echo "Running."
else
  echo "Stopped."
  echo ""
  echo "Suggestion: Run 'bin/start' to start via Docker, or 'yarn dev' to start locally."
fi
